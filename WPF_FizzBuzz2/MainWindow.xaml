<Window x:Class="WPF_FizzBuzz2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_FizzBuzz2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="{Binding Path=Test}" HorizontalAlignment="Left" Margin="36,34,0,0" VerticalAlignment="Top" Height="42" Width="731"/>
        <Label Content="{Binding Path=InputName}" HorizontalAlignment="Left" Height="50" Margin="36,94,0,0" VerticalAlignment="Top" Width="162"/>
        <TextBox HorizontalAlignment="Left" Height="50" Margin="203,94,0,0" TextWrapping="Wrap" Text="{Binding Path=InText}" VerticalAlignment="Top" Width="457"/>
        <Label Content="{Binding Path=OutputName}" HorizontalAlignment="Left" Height="50" Margin="36,243,0,0" VerticalAlignment="Top" Width="162" RenderTransformOrigin="0.5,1.488"/>
        <Button Command="{Binding Path=SendFizzBuzz}" Content="{Binding Path=CalcText}" HorizontalAlignment="Left" Height="63" Margin="36,161,0,0" VerticalAlignment="Top" Width="162"/>
        <TextBox HorizontalAlignment="Left" Height="50" Margin="203,243,0,0" TextWrapping="Wrap" Text="{Binding Path=OutText}" VerticalAlignment="Top" Width="457"/>

    </Grid>
</Window>
